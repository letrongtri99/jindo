<div ng-controller="newcoaches" class="container-fluid">
    <div class="card shadow mb-4" style="padding: 15px;">
        <div class="card-header py-3" style="margin-bottom: 10px;text-align: center;">
            <h6 class=" font-weight-bold text-primary" style="font-size: 20px;">THÊM HLV MỚI</h6>
        </div>
        <form>
            <div class="form-group">
                <label for="exampleInputEmail1">Nhập tên huấn luyện viên</label>
                <input maxlength="255" ng-model="coaches.namehlv" type="text" class="form-control">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Miêu tả thành tích</label>
                <textarea ng-model="coaches.thanhtich" type="text" class="form-control" rows="2"></textarea>
            </div>
            <div class="form-group">
                <label>Ảnh đại diện( khuyến cáo đăng ảnh kích cỡ 273x300)</label>
                <input type="file" onchange="angular.element(this).scope().uploadImage(event)" class="form-control" />
            </div>
            <div style="margin-bottom: 10px;" id="imgHelp" role="alert">{{coaches.alert}}</div>
            <div style="text-align:center;">
                <div ng-style="{'background-image':'url('+coaches.link+')'}" style="width: 273.75px;height: 300px;background-size: cover;background-repeat: no-repeat;background-position: center;margin: 0 auto"></div>
            </div>
            <br>
            <div style="text-align: right;">
                <button ng-click="upload()" type="button" class="btn btn-primary">Tạo Mới</button>
            </div>
        </form>
    </div>
    <script src="js/admin/newcoaches.js"></script>
</div>