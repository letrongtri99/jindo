<div ng-controller="scheduleTable" ng-init="initTable()" id="boss">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Lịch Học Bóng Đá & Bóng Rổ</h6>
        </div>
        <a role="button" href="/them-lich-hoc" class="btn btn-info btn-info-add-more" style="width:11%;margin-left: 20px;margin-top: 10px;">Thêm Mới</a>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="table" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Tên quận, huyện</th>
                            <th>Tên sân bóng</th>
                            <th>Địa điểm</th>
                            <th>Thời gian</th>
                            <th>Link map của sân bóng</th>
                            <th>Công cụ</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Nhập quận, huyện</label>
                            <input maxlength="255" ng-model="schedules.district" type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Nhập tên sân bóng</label>
                            <textarea maxlength="255" ng-model="schedules.stadium" type="text" class="form-control" rows="1"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Nhập địa điểm</label>
                            <textarea maxlength="255" ng-model="schedules.location" type="text" class="form-control" rows="1"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Nhập thời gian</label>
                            <textarea maxlength="255" ng-model="schedules.time" type="text" class="form-control" rows="1"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Dán đường link map</label>
                            <textarea maxlength="255" ng-model="schedules.stadium_url" type="text" class="form-control" rows="5"></textarea>
                        </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                    <button ng-click="update(schedules.id)" type="button" class="btn btn-primary">Chỉnh Sửa</button>
                </div>
            </div>
        </div>
    </div>
    <script src="js/admin/schedule.js"></script>
</div>