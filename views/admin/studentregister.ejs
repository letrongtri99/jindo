<style>
    .btn-info {
        font-size: 12px;
        padding: 3px;
    }
    
    td.ng-scope {
        padding: 6px;
    }
    
    .ellipsis0 {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        max-width: 150px;
    }
</style>

<div ng-controller="hocvien" ng-init="showStudent()">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Học Viên Đăng Ký</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="table" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Tên phụ huynh</th>
                            <th>Tên học viên</th>
                            <th>Số điện thoại</th>
                            <th>Khóa học đăng Kí</th>
                            <th>Ngày đăng kí</th>
                            <th>Công Cụ</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <form>
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label>Tên bố (mẹ)</label>
                                <input ng-model="register.tenbome" type="text" class="form-control">
                            </div>
                            <div class="form-group col-md-4">
                                <label>Tên học viên</label>
                                <input ng-model="register.tencon" type="text" class="form-control">
                            </div>
                            <div class="form-group col-md-4">
                                <label>Số điện thoại</label>
                                <input ng-model="register.phone" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label>Khóa học đăng ký</label>
                                <select ng-model="register.courses" class="form-control">
                                    <option value="Khóa Học Bóng Đá">Khóa Học Bóng Đá</option>
                                    <option value="Khóa Học Bóng Rổ">Khóa Học Bóng Rổ</option>
                                </select>
                            </div>
                            <div class="form-group col-md-3">
                                <label>Ngày tháng năm sinh</label>
                                <input ng-model="register.dob" type="text" id="datepicker" class="form-control" />
                            </div>
                            <div class="form-group col-md-3">
                                <label>Giới tính</label>
                                <select ng-model="register.sex" class="form-control">
                                    <option value="Nam">Nam</option>
                                    <option value="Nữ">Nữ</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Địa chỉ</label>
                            <div class="col-sm-10">
                                <input ng-model="register.address" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Câu hỏi</label>
                            <div class="col-sm-10">
                                <textarea ng-model="register.question" type="text" class="form-control" rows="2"></textarea>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                    <button ng-click="update(register.id)" type="button" class="btn btn-primary">Chỉnh Sửa</button>
                </div>
            </div>
        </div>
    </div>
    <script src="js/admin/registerstudent.js"></script>
</div>