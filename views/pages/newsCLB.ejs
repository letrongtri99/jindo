if(!req.params.pageNumber || req.params.pageNumber==1){ currentPage =1} else
{ currentPage = req.params.pageNumber}

%>
<div class="col-md-12 text-center">
    <ul id="example" class="pagination"></ul>
</div>

<script>
$(function() {
    $("#example").pagination({
        items: '<%=total%>',
        itemsOnPage: 9,
        displayedPages: 3,
        edges: 1,
        currentPage: '<%=currentPage%>',        
        hrefTextPrefix: '/tin-tuc-clb/',
        cssStyle: 'light-theme'
    });
});
</script>

            </div>
        </div>
    </section>
</div>
