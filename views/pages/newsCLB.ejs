<!-- Start main-content -->
<div class="main-content">
    <!-- Section: inner-header -->
    <section class="inner-header divider parallax  overlay-dark-5 section_central_image" data-bg-img="/images/jindo_central_moment/IMG_0004.jpg">
        <div class="container pt-70 pb-20">
            <!-- Section Content -->
            <div class="section-content">
                <div class="row">
                    <div class="col-md-12" style="margin-top: 180px;">
                        <h2 class="title text-white text-uppercase">Tin tức các CLB</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Section: Upcoming Events -->
    <section id="upcoming-events" class="divider layer-overlay overlay-white-8">
        <div class="container pb-50 pt-80">
            <div class="section-content" id="portfolio-container">
                <div class="row" id="gallery-isotope-grid">
                    <%articles.forEach(function(article) { %>
                        <div class="col-sm-6 col-md-4 col-lg-4">
                            <div class="schedule-box maxwidth500 bg-light mb-30">
                                <div class="post-thumb thumb">
                                    <img src="<%=article.cover_image%>" alt="" class="img-responsive img-fullwidth img-slide-blog">
                                </div>
                                <div class="entry-content p-15 pt-10 pb-10">
                                    <div class="entry-meta media no-bg no-border mt-0 mb-10">
                                        <div class="media-body pl-0">
                                            <div class="event-content pull-left flip">
                                                <h4 class="entry-title text-uppercase font-weight-600 m-0 mt-5">
                                                    <a class="title-blog limited-text-2" href="/bai-viet-<%=article.slug%>">
                                                        <%=article.title%>
                                                    </a>
                                                </h4>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mt-5 limited-text-3">
                                        <%=article.summary%>
                                    </div>
                                    <a class="text-theme-color-2 font-14 ml-0" href="/bai-viet-<%=article.slug%>">Đọc thêm</a>
                                </div>
                            </div>
                        </div>
                        <%})%>

                </div>

                <!--PAGINATION-->
                <% let max;
                if(total%9 != 0) {
                    max = Math.trunc(total/9)+1;
                }else {
                    max = Math.trunc(total/9);
                }
        %>
